<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GB_ASL_calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GB_ASL_calculator.MyBtnStyle">
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:layout_marginLeft">@dimen/margins_left_right</item>
        <item name="android:layout_marginRight">@dimen/margins_left_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black85</item>
        <item name="android:insetRight">@dimen/inset_right_left</item>
        <item name="android:insetLeft">@dimen/inset_right_left</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>
    <style name="Theme.GB_ASL_calculator.MyAppStyle">
        <item name="android:background">@drawable/previewbackgroundone</item>
    </style>
</resources>